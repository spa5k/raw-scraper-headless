{
  "name": "esbuild-typescript-library-template",
  "description": "Typescript Esbuild Library Template",
  "version": "1.7.0",
  "author": "spa5k <unbuttun@gmail.com>",
  "bugs": {
    "url": "https://github.com/spa5k/esbuild-typescript-library-template/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "commitizen": "4.2.4",
    "dotenv": "10.0.0",
    "esbuild": "0.13.13",
    "esbuild-jest": "0.5.0",
    "eslint": "8.2.0",
    "eslint-config-galex": "3.3.3",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-inclusive-language": "2.1.1",
    "eslint-plugin-jest-formatting": "3.0.0",
    "eslint-plugin-promise": "5.1.1",
    "eslint-plugin-sonarjs": "0.10.0",
    "eslint-plugin-unicorn": "38.0.1",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "node-dev": "7.1.0",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "semantic-release": "18.0.0",
    "tslib": "2.3.1",
    "tsup": "5.7.0",
    "typescript": "4.4.4"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/spa5k/esbuild-typescript-library-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format && pnpm lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "cjs",
    "dts",
    "esbuild",
    "esm",
    "library",
    "template",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "packageManager": "yarn@3.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spa5k/esbuild-typescript-library-template.git"
  },
  "scripts": {
    "build": "NODE_ENV='production' tsup-node",
    "build:dev": "NODE_ENV='development' tsup-node",
    "dev": "node-dev dist/main.js",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "semantic-release": "semantic-release",
    "test": "jest",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "typings": "dist/index.d.ts"
}
